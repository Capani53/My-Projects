@model List<HiFiViewModel>
@{
    ViewData["Title"] = "HiFilar Ana Sayfa";
}
<h1 class="display-6 text-danger">HiFilar</h1>
<hr />
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th width="50">Id</th>
            <th>HiFi Ad</th>
            <th>Özellikler</th>
            <th>Stok</th>
            <th>Fiyat</th>
            <th width="120">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hiFi in Model)
        {
            <tr>
                <td>@hiFi.Id</td>
                <td>@hiFi.Name</td>
                <td>@hiFi.Properties</td>
                <td>@hiFi.Stock</td>
                <td>@($"{hiFi.Price:C0}")</td>
                <td><a asp-controller="HiFi" asp-action="Delete" asp-route-id="@hiFi.Id" class="btn btn-danger btn-sm">Sil</a>
                    <a asp-controller="HiFi" asp-action="Update" asp-route-id="@hiFi.Id" class="btn btn-warning btn-sm">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>