@model List<CategoryViewModel>
<h1 class="display-6 text-danger">Kategoriler</h1>
<hr/>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th width="50">Id</th>
            <th>Kategori Ad</th>
            <th width="120">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    @* <a href="/category/delete/@category.Id" class="btn btn-danger btn-sm">Sil</a> *@
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Sil</a>
                    <a href="#" class="btn btn-warning btn-sm">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>