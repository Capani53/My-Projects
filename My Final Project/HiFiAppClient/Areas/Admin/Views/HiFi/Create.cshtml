@model AddHiFiModel
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <form asp-area="Admin"
          asp-controller="HiFi"
          asp-action="Create" method="post">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">HiFi Ekle</h1>
                </div><!-- /.col -->
                <div class="col-sm-6 d-flex justify-content-end">
                    <input 
                       class="btn btn-success btn-sm" value="Kaydet" type="submit" />
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Main row -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-9">Temel HiFi Bilgileri</div>
                                <div class="col-md-3">
                                    <div>                                    
                                        <div class="form-group">
                                            <label>Select</label>
                                            <select class="form-control">
                                                <option>option 1</option>
                                                <option>option 2</option>
                                                <option>option 3</option>
                                                <option>option 4</option>
                                                <option>option 5</option>
                                            </select>
                                        </div>                                  
                                    </div>
                                    <div>
                                        @foreach (var category in Model.CategoryList)
                                        {
                                            <div class="icheck-primary ">
                                            <input type="checkbox" id="category_@category.Id" name="CategoryIds" value="@category.Id" >
                                            <label for="category_@category.Id">@category.Name</label>
                                            </div>
                                        }                    
                                    </div>                                    
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
                <!-- right col -->
            </div>
            <!-- /.row (main row) -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
    </form>
</div>
<!-- /.content-wrapper -->
@section Css{
    <!-- iCheck -->
    <link rel="stylesheet" href="~/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
}