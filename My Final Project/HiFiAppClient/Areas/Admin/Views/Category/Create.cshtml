@model AddCategoryModel
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <form asp-area="Admin" asp-controller="Category" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Kategori Ekle</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6 d-flex justify-content-end">
                        <input class="btn btn-success btn-sm" value="Kaydet" type="submit" />
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <!-- Main row -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-9">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Name"></label>
                                                    <input asp-for="Name" class="form-control" />
                                                    <span class="text-danger" asp-validation-for="Name"></span>
                                                </div>
                                            </div>                                         
                                           
                                            <div class="col-md-4">
                                                <label>Ayarlar</label>
                                                <div class="pt-1">
                                                    <input type="checkbox" name="my-checkbox" checked
                                                           data-bootstrap-switch data-label-text="Aktif"
                                                           asp-for="IsActive">
                                                    <input type="checkbox" name="my-checkbox" checked
                                                           data-bootstrap-switch data-label-text="Anasayfa"
                                                           asp-for="IsHome">
                                                </div>
                                            </div>
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label for="image">Resim</label>

                                                    <div class="custom-file">
                                                        <input type="file" class="custom-file-input" id="image"
                                                               name="image">
                                                        <label class="custom-file-label" for="customFile">
                                                            Resim
                                                            seç
                                                        </label>
                                                        <span class="text-danger">@ViewBag.ImageErrorMessage</span>
                                                    </div>
                                                    <div class="mt-2">
                                                        <img class="img-thumbnail img-fluid d-none" id="image-preview"
                                                             style="height: 200px;" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label asp-for="Description"></label>
                                                    <textarea class="form-control" asp-for="Description"></textarea>
                                                    <span class="text-danger" asp-validation-for="Description"></span>
                                                </div>
                                            </div>                                            
                                        </div>
                                    </div>                                    
                            </div>
                            <!-- /.card-body -->
                        </div>
                    </div>
                </div>
                <!-- /.row (main row) -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </form>
</div>
<!-- /.content-wrapper -->
@section Css {
    <!-- iCheck -->
    <link rel="stylesheet" href="~/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/admin/plugins/summernote/summernote-bs4.min.css">

}

@section Js {
    <!-- Bootstrap Switch -->
    <script src="~/admin/plugins/bootstrap-switch/js/bootstrap-switch.min.js"></script>
    <!-- summernote -->
    <script src="~/admin/plugins/summernote/summernote-bs4.min.js"></script>

    <script>
        $(function () {          
            
            $('#Description').summernote({
                height: 200
            });
            $("input[data-bootstrap-switch]").each(function () {
                $(this).bootstrapSwitch('state', $(this).prop('checked'));
            });
            $('#image').on('change', function (e) {
                const selectedFiles = e.target.files;
                $('#image-preview').addClass('d-block');
                $('#image-preview').attr('src', window.URL.createObjectURL(selectedFiles[0]));
            });
        });

    </script>
}